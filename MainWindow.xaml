<Window x:Class="PokerGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PokerGame"
        Title="Quantum Video Poker" Height="750" Width="1200">
    <Window.Background>
        <ImageBrush ImageSource="Assets/background.png" Stretch="UniformToFill"/>
    </Window.Background>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" BorderThickness="1" BorderBrush="#88FFFFFF">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#444" Offset="0"/>
                                    <GradientStop Color="#222" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
             <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" BorderThickness="2" BorderBrush="#FFFF00">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#CC0000" Offset="0"/>
                                    <GradientStop Color="#880000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DD0000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#660000"/>
                            </Trigger>
                             <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <DataTemplate DataType="{x:Type local:GameSelectionViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
                    <TextBlock Text="QUANTUM VIDEO POKER" Foreground="#FFD700" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Select Game Variant" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button Content="Jacks or Better" Command="{Binding SelectJacksOrBetterCommand}" Width="250" Height="80" FontSize="24" Margin="20"/>
                    <Button Content="Deuces Wild" Command="{Binding SelectDeucesWildCommand}" Width="250" Height="80" FontSize="24" Margin="20"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:VideoPokerViewModel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header / Status -->
                <Border Background="#222" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CREDITS: " Foreground="White" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Credits}" Foreground="#FFD700" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="{Binding StatusText}" Foreground="{Binding StatusBrush}" 
                                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock Text="BET: " Foreground="White" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedBet}" Foreground="#FFD700" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Cards Area -->
                <Grid Grid.Row="1" Margin="20" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <local:CardControl x:Name="Card1" Grid.Column="0" Margin="5" MouseDown="Card_MouseDown"/>
                    <local:CardControl x:Name="Card2" Grid.Column="1" Margin="5" MouseDown="Card_MouseDown"/>
                    <local:CardControl x:Name="Card3" Grid.Column="2" Margin="5" MouseDown="Card_MouseDown"/>
                    <local:CardControl x:Name="Card4" Grid.Column="3" Margin="5" MouseDown="Card_MouseDown"/>
                    <local:CardControl x:Name="Card5" Grid.Column="4" Margin="5" MouseDown="Card_MouseDown"/>
                </Grid>

                <!-- Controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <Button Content="BET ONE" Command="{Binding BetOneCommand}" Width="100" Height="50" Margin="10" 
                            Visibility="{Binding ShowBetControls, Converter={StaticResource BoolToVis}}"/>
                    <Button Content="BET MAX" Command="{Binding BetMaxCommand}" Width="100" Height="50" Margin="10" 
                            Visibility="{Binding ShowBetControls, Converter={StaticResource BoolToVis}}"/>
                    
                    <Button Content="{Binding DealDrawLabel}" Command="{Binding DealDrawCommand}" Width="120" Height="60" Margin="20,0" 
                            FontWeight="Bold" FontSize="18" Background="#4CAF50" Foreground="White"
                            Visibility="{Binding ShowDealDrawButton, Converter={StaticResource BoolToVis}}"/>

                    <Button Content="DOUBLE UP" Command="{Binding DoubleCommand}" Width="120" Height="60" Margin="20,0" 
                            FontWeight="Bold" FontSize="18" Background="#FF9800" Foreground="White"
                            Visibility="{Binding ShowDoubleButton, Converter={StaticResource BoolToVis}}"/>
                    
                    <Button Content="COLLECT" Command="{Binding CollectCommand}" Width="120" Height="60" Margin="20,0" 
                            FontWeight="Bold" FontSize="18" Background="#2196F3" Foreground="White"
                            Visibility="{Binding ShowCollectButton, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
                
                <!-- Paytable (Simplified) -->
                <TextBlock Grid.Row="3" Text="Pays according to variant rules" Foreground="Gray" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
